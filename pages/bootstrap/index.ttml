<view class="container">
  <!-- Header -->
  <view class="header text-center">
    <text class="title display-4">Galeri Kreatif</text>
    <text class="subtitle lead text-muted">Eksplorasi Warna, Font, dan Ikon</text>
  </view>

  <!-- Scrollable Content -->
  <scroll-view scroll-y="true" class="mt-4">
    <!-- Konten Pertama: Grid 2x2 -->
    <view class="row row-cols-2 g-3">
      <view class="col">
        <view class="card h-100 text-center p-3 shadow-sm">
          <text class="icon display-3">🎨</text>
          <text class="label h5 mt-2">Kreativitas</text>
        </view>
      </view>
      <view class="col">
        <view class="card h-100 text-center p-3 shadow-sm">
          <text class="icon display-3">⛰️</text>
          <text class="label h5 mt-2">Keindahan Alam</text>
        </view>
      </view>
      <view class="col">
        <view class="card h-100 text-center p-3 shadow-sm">
          <text class="icon display-3">🎵</text>
          <text class="label h5 mt-2">Musik</text>
        </view>
      </view>
      <view class="col">
        <view class="card h-100 text-center p-3 shadow-sm">
          <text class="icon display-3">🚀</text>
          <text class="label h5 mt-2">Eksplorasi</text>
        </view>
      </view>
    </view>

    <!-- Konten Kedua: Dua Card -->
    <view class="mt-4">
      <view class="card mb-3 p-3 shadow-sm">
        <text class="h5 text-primary">Inovasi Masa Depan</text>
        <text class="text-muted">Teknologi yang mengubah dunia.</text>
      </view>
      <view class="card p-3 shadow-sm">
        <text class="h5 text-success">Tips Produktivitas</text>
        <text class="text-muted">Meningkatkan efisiensi harian.</text>
      </view>
    </view>

    <!-- Bar Chart -->
    <view class="text-center mt-4">
      <text class="chart-title h5">Penjualan Bulanan</text>
      <canvas canvas-id="barChart" style="width: 360px; height: 350px;" class="mt-2"></canvas>
    </view>

    <!-- Pie Chart -->
    <view class="text-center mt-4">
      <text class="chart-title h5">Distribusi Produk</text>
      <canvas canvas-id="pieChart" style="width: 360px; height: 300px;" class="mt-2"></canvas>
    </view>

  </scroll-view>
</view>
